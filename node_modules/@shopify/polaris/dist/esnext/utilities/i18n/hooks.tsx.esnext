import { useContext } from 'react';
import { MissingAppProviderError } from '../errors.ts.esnext';
import { I18nContext } from './context.tsx.esnext';

function useI18n() {
  const i18n = useContext(I18nContext);

  if (!i18n) {
    throw new MissingAppProviderError('No i18n was provided.');
  }

  return i18n;
}

export { useI18n };
