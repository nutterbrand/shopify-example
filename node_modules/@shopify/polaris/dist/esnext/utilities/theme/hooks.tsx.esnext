import { useContext } from 'react';
import { ThemeContext } from './context.tsx.esnext';
import { MissingAppProviderError } from '../errors.ts.esnext';

function useTheme() {
  const theme = useContext(ThemeContext);

  if (!theme) {
    throw new MissingAppProviderError('No Theme was provided.');
  }

  return theme;
}

export { useTheme };
